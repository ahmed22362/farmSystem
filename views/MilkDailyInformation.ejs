<!DOCTYPE html>
<html>
<head>
    <title>Add daily information</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: right;
            background-color: #f4f4f4;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        form {
            max-width: 400px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 10px;
            color: #555;
        }

        select, input[type="number"], input[type="date"], textarea {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-bottom: 10px;
            direction: rtl;
            text-align: right;
        }

        button[type="submit"] {
            background-color: #4caf50;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
        }

        button[type="submit"]:hover {
            background-color: #45a049;
        }
        .right-aligned {
            direction: rtl;
            text-align: right;
        }
        .input-pair {
            display: none;
        }

    </style>

</head>
<body>
  <% if (typeof weight !== 'undefined' ){ %>
    <h1>إضافة وزن بقرة </h1>
  <% } else if (typeof fodder !== 'undefined' ){ %>
    <h1>إضافة كمية العلف المأكولة لبقرة </h1>
  <% } %>

    <form action="/milk_cows/<%=route%>/add" method="post">


        <% if (typeof weight !== 'undefined') { %>
          <label for="cow_id">:كود البقرة</label>
          <textarea type="text" class="right-aligned" rows="1"  name="cow_id" required></textarea><br>
          <label for="weight">:الوزن</label>
          <input type="number" class="right-aligned"  name="weight" required><br>
          <label for="measurement_date">:تاريخ الوزن</label>
          <input type="date" class="right-aligned"  name="measurement_date" required><br>
          <br>
        <% } else if (typeof fodder !== 'undefined'){ %>   
            <label for="cow_id">:كود البقرة</label>
            <textarea type="text" class="right-aligned" rows="1"  name="cow_id" required></textarea><br>
            <label for="fodder_amount">:كمية العلفة المأكولة</label>
            <input type="number" class="right-aligned"  name="fodder_amount" required><br>
            <label for="feeding_date">:تاريخ اليوم</label>
            <input type="date" class="right-aligned"  name="feeding_date" required><br>
            <br>
        <% } else if (typeof milking !== 'undefined'){ %>   
            <label for="cow_id">:كود البقرة</label>
            <textarea type="text" class="right-aligned" rows="1"  name="cow_id" required></textarea><br>
            <label for="milk_amount">:كمية اللبن المحلوبة</label>
            <input type="number" class="right-aligned"  name="milk_amount" required><br>
            <label for="milking_datetime">:وقت الحلب</label>
            <input type="datetime-local" class="right-aligned"  name="milking_datetime" required><br>
            <br>
        <% } else if (typeof reproduction !== 'undefined'){ %>   
            <label for="cow_id">:كود البقرة</label>
            <textarea type="text" class="right-aligned" rows="1"  name="cow_id" required></textarea><br>
            <label for="code_of_pollinated_animal">:كود الحيوان الملقح</label>
            <input type="text" class="right-aligned"  name="code_of_pollinated_animal" required><br>
            <br>
            <label for="number_of_pollination">:عدد مرات التلقيح</label>
            <input type="number" class="right-aligned"  name="number_of_pollination" required><br>
            <label for="number_of_births">:عدد مرات الولادة</label>
            <input type="number" class="right-aligned"  name="number_of_births" required><br>
            <label for="date_of_births">:تاريخ الولادة</label>
            <input type="date" class="right-aligned"  name="date_of_births" required><br>
            <label for="date_of_estrus">:ميعاد الشياع</label>
            <input type="date" class="right-aligned"  name="date_of_estrus" required><br>
            <label for="date_of_insemination">:ميعاد التخصيب</label>
            <input type="date" class="right-aligned"  name="date_of_insemination" required><br>
            <br>
        <% } %>
        <button type="submit">إضافة</button>
    </form>
</body>
</html>