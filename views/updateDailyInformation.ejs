<!DOCTYPE html>
<html>

<head>
	<title>تعديل بيانات الحيوان</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: right;
            background-color: #f4f4f4;
            padding: 20px;
            direction: rtl;
            text-align: right;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        form {
            max-width: 400px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 10px;
            color: #555;
        }

        select, input[type="number"], input[type="date"], textarea {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

        button[type="submit"] {
            background-color: #4caf50;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
        }

        button[type="submit"]:hover {
            background-color: #45a049;
        }
        .right-aligned {
            direction: rtl;
            text-align: right;
        }
    </style>
</head>

<body>
	<div class="container">
        <% if (typeof weight !== 'undefined' ){ %>
            <h1>تعديل بيانات الوزن</h1>
            <% } else if (typeof fodder !== 'undefined' ){ %>
			<h1>تعديل بيانات استهلاك العلف </h1>
		<% } %>
		<form 
            action="http://localhost:3000/<%=first%>/<%=second%>/update" method="post">

            <input type="hidden" name="id" value="<%= record.id %>">
            <input type="hidden" name="cow_id" value="<%= record.cow_id %>">

        <% if (typeof weight !== 'undefined') { %>
            <label for="weight">كود البقرة</label>
            <label for="weight"><%= record.cow_id %></label>
            <label for="weight">:الوزن</label>
            <input type="number" class="right-aligned"  name="weight" value="<%= record.weight %>"><br>
            <label for="measurement_date">:تاريخ الوزن</label>
            <input type="date" class="right-aligned"  name="measurement_date" value="<%= record.measurement_date %>"><br>
            <br>
        <%} else if( typeof fodder !== "undefined"){%>   
            <label for="weight">كود البقرة</label>
            <label for="weight"><%= record.cow_id %></label>
            <label for="fodder_amount">كمية العلفة المأكولة:</label>
            <input type="number" class="right-aligned"  name="fodder_amount" value="<%= record.fodder_amount %>"><br>
            <label for="feeding_date">تاريخ اليوم:</label>
            <input type="date" class="right-aligned"  name="feeding_date" value="<%= record.feeding_date %>"><br>
            <br>
        <%} else if (typeof milking !== 'undefined'){ %>   
            <label for="weight_on_birth">:كود البقرة</label>
            <label for="weight"><%= record.cow_id %></label>
            <label for="milk_amount">:كمية اللبن المحلوبة</label>
            <input type="number" class="right-aligned"  name="milk_amount" required value="<%= record.milk_amount %>"><br>
            <label for="milking_datetime">:وقت الحلب</label>
            <input type="datetime-local" class="right-aligned"  name="milking_datetime" required value="<%= record.milking_datetime %>"><br>
            <br>
        <% } else if (typeof reproduction !== 'undefined'){ %>   
            <label for="weight_on_birth">:كود البقرة</label>
            <label for="weight"><%= record.cow_id %></label>
            <label for="code_of_pollinated_animal">:كود الحيوان الملقح</label>
            <input type="text" class="right-aligned"  name="code_of_pollinated_animal" required value="<%= record.code_of_pollinated_animal %>" ><br>
            <br>
            <label for="number_of_pollination">:عدد مرات التلقيح</label>
            <input type="number" class="right-aligned"  name="number_of_pollination" required value="<%= record.number_of_pollination %>"><br>
            <label for="number_of_births">:عدد مرات الولادة</label>
            <input type="number" class="right-aligned"  name="number_of_births" required value="<%= record.number_of_births %>"><br>
            <label for="date_of_births">:تاريخ الولادة</label>
            <input type="date" class="right-aligned"  name="date_of_births" required value="<%= record.date_of_births %>"><br>
            <label for="date_of_estrus">:معاد الشياع</label>
            <input type="date" class="right-aligned"  name="date_of_estrus" required value="<%= record.date_of_estrus %>"><br>
            <label for="date_of_insemination">:معاد التخصيب</label>
            <input type="date" class="right-aligned"  name="date_of_insemination" required value="<%= record.date_of_insemination %>"><br>
            <br>
        <% } %>
			<button type="submit">حفظ التعديلات</button>
		</form>
	</div>
</body>

</html>
